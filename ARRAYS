import java.util.Scanner;
class HelloWorld {
    public static void main(String[] args) {
        int sum=0;
        
        Scanner sc = new Scanner(System.in);
        System.out.println("ENTER THE NO OF ELEMENTS;");
        int n = sc.nextInt();
        int[] r= new int[100];
        for(int i=0;i<n;i++)
        {
            r[i]=sc.nextInt();
           sum=sum+r[i];
        }
        System.out.println(sum);
    }
}


