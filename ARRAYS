import java.util.*;
class HelloWorld {
    public static void main(String[] args) {
        int mini;
       Scanner sc = new Scanner(System.in);
       System.out.println("ENTER NO OF ELEMNTS;");
       int n = sc.nextInt();
       int ar[] =new int[n];
      int i =0;
      System.out.println("ENTER A ARRAY ELEMENTS:");
      while(i<n)
      {
          ar[i] =sc.nextInt();                                    //from user_____________
          i++;
      }
      
      
      System.out.println("ARRAY ELEMENTS in way 1:");
       for( i=0;i<n;i++)                                          //??to print array elements in 3 types------------
       {
           System.out.println(ar[i]);
       }
       
       System.out.println("ARRAY ELEMENTS in way 2:");
        for( int el : ar)
        {
          System.out.println(el);
        }
        
        
       System.out.println("ARRAY ELEMENTS in way 3:");
       System.out.println(Arrays.toString(ar));
    }
}

